@model GridLogik.ViewModels.CommunicationDetail

@{
    ViewBag.Title = "";
}

@section scripts
{
    <script>
        $(document).ready(function () {

            if ('@ViewBag.CreateAccess' == "False") {
                $("#btnCreate").hide();
            }
            if ('@ViewBag.EditAccess' == "False") {
                $(".btnEdit").hide();
            }
            if ('@ViewBag.DeleteAccess' == "False") {
                $(".btnDelete").hide();
            }
            if ($('#CommunicationTypeID option:selected').text() == 'TCP') {
                $("#typeSerial").hide();
                $("#typeTCP").show();
            }
            else if ($('#CommunicationTypeID option:selected').text() == 'Serial') {
                $("#typeSerial").show();
                $("#typeTCP").hide();
            }
            else {
                $("#typeSerial").hide();
                $("#typeTCP").hide();
            }

           
        });

      
          
        

       
    </script>
}
<section>
    <div id="main-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <!--Top header start-->
                    @*<h3 class="ls-top-header">Convertor</h3>*@
                    <!--Top header end -->
                    <!--Top breadcrumb start -->
                    <ol class="breadcrumb">
                        <li><a href="#"><i class="fa fa-home"></i></a></li>
                        <li><a href="#">Configurations</a></li>
                        <li class="active">Convertor</li>
                    </ol>
                    <!--Top breadcrumb start -->
                    <div class="row">
