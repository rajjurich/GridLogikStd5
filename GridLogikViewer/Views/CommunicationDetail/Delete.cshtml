                                                    @Html.LabelFor(model => model.popupalarmChecked, new { @style = "padding-left:2px;" }) <span>&nbsp;</span>
                                                </div> <div class="col-md-3">
                                                    @Html.CheckBoxFor(model => model.smsalarmChecked, new { @class = "chkbox", @disabled = "disabled", @style = "margin-top:3px;" })
                                                    @Html.LabelFor(model => model.smsalarmChecked, new { @style = "padding-left:2px;" }) <span>&nbsp;</span>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="panel-footer col-md-12 text-center">
                                                <button type="submit" class="btn btn-danger btnDelete" id="btnDelete"><i class="fa fa-trash-o"></i>&nbsp;&nbsp;Delete</button>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <span>
                                                        @Html.Raw(ViewBag.ErrorMessage)
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
