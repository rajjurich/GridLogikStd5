@model IEnumerable<GridLogik.ViewModels.MstRole>
@{
    ViewBag.Title = "Role List";
}

@section scripts
{
    <script>
        // var box;
        $(document).ready(function () {
            $("#lsttable").dataTable(
                       {
                           pageLength: 10,
                           "aoColumns": [
                                       null,
                                       null,
                                       null,
                                       { "bSortable": false, "width": "144px" }
                           ]
                       });

            if ('@ViewBag.CreateAccess' == "False") {
                $("#btnCreate").hide();
            }
            if ('@ViewBag.EditAccess' == "False") {
                $(".btnEdit").hide();
            }
            if ('@ViewBag.DeleteAccess' == "False") {
                $(".btnDelete").hide();
            }
            
            });
     

    </script>

}

<section>
    <div id="main-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <!--Top header start-->
                    @*<h3 class="ls-top-header">Role</h3>*@
                    <!--Top header end -->
                    <!--Top breadcrumb start -->
                    <ol class="breadcrumb">
                        <li><a href="#"><i class="fa fa-home"></i></a></li>
                        <li><a href="#">Masters</a></li>
                        <li class="active">Role</li>
                    </ol>
                    <!--Top breadcrumb start -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">

                                <div class="panel-body">
                                    <!--Table Wrapper Start-->
                                    <div class="table-responsive ls-table">
                                        @*<button class="btn btn-success pull-right btn-sm"><i class="fa fa-plus-circle"></i> Create New</button>*@
                                        @Html.ActionLink(" Create New", "create", "Role", null, new { @id = "btnCreate", @class = "fa fa-plus-circle text-white btn btn-success pull-right btn-sm btnCreateClass" })
                                        @*<div class="clearfix"></div>
                                            <hr />
                                            <br />*@
                                        <table id="lsttable" class="table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th class="text-center">Role Code</th>
                                                    <th class="text-center">Role Name</th>
                                                    <th class="text-center">Role Desciption</th>
                                                    <th class="text-center">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody id="data">
                                                @foreach (var response in Model)
                                                {
                                                    <tr>
                                                        <td class="text-center">@response.rolid</td>
                                                        <td class="text-center">@((response.rolname == null) ? " " : response.rolname)</td>
                                                        <td class="text-center">@((response.roldescription == null) ? " " : response.roldescription)</td>
                                                        <td class="text-center" style="width:144px">
                                                            @Html.ActionLink(" Edit", "Edit", new { id = response.rolrecid }, new { @class = "fa fa-pencil-square-o text-white btn btn-xs btn-warning btnEdit" })
                                                            @Html.ActionLink(" Delete", "Delete", new { id = response.rolrecid }, new { @class = "fa fa-trash-o text-white btn btn-xs btn-danger btnDelete" })
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@Scripts.Render("~/bundles/jqueryval")
