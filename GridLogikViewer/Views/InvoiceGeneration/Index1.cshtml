                return false;
            }
            if ($("#txtToDate").val() == "") {
                ErrDisplay('Please Select To Date', 'txtToDate');
                return false;
            }
            var categories_data = new Array();
            var InvoiceMeterData = {
                "CompanyCode": $("#ddlCompany").val(),
                "MeterGroup": $("#ddlMeterGroup").val(),
                "FromDate": $('#txtFrmDate').val(),
                "ToDate": $('#txtToDate').val()
