        function PerformanceChart() {
            var legendArray = new Array();
            var seriesOptions = "";
            var FinString = "";
            var opt = "table";
           // var BaseAddress = "http://localhost:8487/EToolsAPI/api/";

            if ($("#ddlCompany").val() == "0") {
                ErrDisplay('Please Select Company', 'ddlCompany');
                // alert('Please Select Company');
                return false;
            }
